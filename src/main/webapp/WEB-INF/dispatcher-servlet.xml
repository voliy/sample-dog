<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <mvc:annotation-driven>
        <mvc:message-converters>
            <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>
        </mvc:message-converters>
    </mvc:annotation-driven>

    <bean name="dogController" class="voliy.samples.dog.controller.DogController">
        <constructor-arg ref="dogService"/>
    </bean>
    <bean name="dogService" class="voliy.samples.dog.service.DogService">
        <constructor-arg ref="dogDao"/>
    </bean>
    <beans profile="inMemory">
        <bean name="dogDao" class="voliy.samples.dog.dao.DogDaoInMemory" init-method="init"/>
    </beans>
    <beans profile="hibernate">
        <bean name="dogDao" class="voliy.samples.dog.dao.DogDaoHibernate" init-method="init"/>
    </beans>
</beans>